<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppBase"></style>

    <!-- Base application theme. -->
    <style name="AppBase" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_default</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_default</item>
        <!-- <item name="android:windowBackground">@color/primary_background</item> -->

        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <item name="colorSwitchThumbNormal">@color/accent_default</item>

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_primary_light</item>
    </style>

    <style name="Tabs" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <style name="MVRTButtonStyle" parent="@android:style/Widget.Button">
        <item name="colorButtonNormal">@color/primary_default</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

</resources>