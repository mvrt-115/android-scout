<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Starting Location"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/starting_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_level1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Level 1" />

                <RadioButton
                    android:id="@+id/radio_level2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Level 2" />

                <RadioButton
                    android:id="@+id/radio_level3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Level 3" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Preload"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/starting_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_auton_power_cells"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Power Cells (0)"
                    android:theme="@style/MVRTButtonStyle" />

                <Button
                    android:id="@+id/bt_auton_power_cells_minus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="-1"
                    android:theme="@style/MVRTButtonStyle" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="Crossing"
                android:layout_weight="1" />

            <Button
                android:id="@+id/bt_auton_initiation_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="25dp"
                android:text="Crosses Initiation Line"
                android:theme="@style/MVRTButtonStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Shooting"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_auton_inner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Inner (0)"
                    android:theme="@style/MVRTButtonStyle" />

                <Button android:id="@+id/bt_auton_inner_minus"
                    android:layout_height = "wrap_content"
                    android:layout_width = "0dp"
                    android:layout_weight = "1"
                    android:text = "-1"
                    android:theme="@style/MVRTButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_auton_outer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Outer (0)"
                    android:theme="@style/MVRTButtonStyle" />

                <Button android:id="@+id/bt_auton_outer_minus"
                    android:layout_height = "wrap_content"
                    android:layout_width = "0dp"
                    android:layout_weight = "1"
                    android:text = "-1"
                    android:theme="@style/MVRTButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_auton_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bottom (0)"
                    android:theme="@style/MVRTButtonStyle" />

                <Button android:id="@+id/bt_auton_bottom_minus"
                    android:layout_height = "wrap_content"
                    android:layout_width = "0dp"
                    android:layout_weight = "1"
                    android:text = "-1"
                    android:theme="@style/MVRTButtonStyle" />

            </LinearLayout>


            <Button
                android:id="@+id/bt_auton_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="25dp"
                android:text="Finish Auton"
                android:theme="@style/MVRTButtonStyle" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>